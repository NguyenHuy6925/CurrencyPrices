<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notifiction_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_dialog_layout"
    android:elevation="0dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="2dp"
        android:background="@drawable/notification_title_layout"
        android:src="@drawable/ic_baseline_notifications_24"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Current rate: "/>

    <TextView
        android:id="@+id/txtCurrentRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_margin="@dimen/_10sdp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="@dimen/_10sdp"
        android:text="Make notification when the rate: "/>

    <EditText
        android:id="@+id/txtSetPrice"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:textSize="15sp"
        android:inputType="numberDecimal"
        android:background="@drawable/set_rate_edt_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOk"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_30sdp"
            android:backgroundTint="@color/btn_ok"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="ok" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:backgroundTint="@color/btn_cancel"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:text="cancel" />
    </LinearLayout>

</LinearLayout>